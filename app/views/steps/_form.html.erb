

<%= simple_form_for [project, step] do |f| %>
      <%= f.input :city, placeholder: 'city', label: "From" %>
      <%= f.input :start_date, label: false,
                                 as: :string,
                                 required: false,
                                 input_html: {class: "datepicker d-none"} %>
      <div class="d-grid gap-2">
      <%= f.submit "Continue", class: "btn-principal" %>
      </div>
<% end %>
