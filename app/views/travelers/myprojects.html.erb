<%= render 'shared/sidebar' %>

<div class="container">
  <div class="container-btn d-flex justify-content-center">
    <%= link_to "Créer un projet", new_project_path, class: "btn btn-home" %>
  </div>

  <div class="container-cards d-flex justify-content-center">

    <div class="project-cards">
      <% @myprojects.each_with_index do  |project, index| %>
        <%= link_to project_path(project) do %>
        <% if index.even? %>
          <% if project.photo.attached? %>
            <div class="project-card-right" style="background-image: url('<%= cl_image_path project.photo.key%>')">
          <% else %>
            <div class="project-card-right" style="background-image: url(https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80)">
          <% end %>
            <div class="empty-card"> &nbsp; </div>
              <div class="project-card-body">
                <h5><%= project.name %></h5>
                <p><i class="fas fa-calendar-alt"></i> Du <%= project.steps.order(:start_date).first.start_date.strftime("%d/%m/%Y") %> au <%= project.steps.order(:end_date).last.end_date.strftime("%d/%m/%Y") %></p>
                <p><i class="fas fa-money-bill-wave"></i> <%= project.total_budget %> €</p>
                <div class="project-icon">
                <%= link_to edit_project_path(project) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to project_path(project), method: :delete do %>
                  <i class="fa fa-trash" ></i>
                <% end %>
                </div>
              </div>
            </div>
        <% else %>
          <% if project.photo.attached? %>
            <div class="project-card-left" style="background-image: url('<%= cl_image_path project.photo.key%>')">
          <% else %>
            <div class="project-card-left" style="background-image: url(https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80)">
          <% end %>
            <div class="project-card-body">
              <h5><%= project.name %></h5>
              <p><i class="fas fa-calendar-alt"></i> 13.06 au 20.06.2022</p>
              <p><i class="fas fa-money-bill-wave"></i> <%= project.total_budget %> €</p>
              <div class="project-icon">
                <%= link_to edit_project_path(project) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to project_path(project), method: :delete do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </div>
            </div>
            <div class="empty-card"> &nbsp; </div>
          </div>
        <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
