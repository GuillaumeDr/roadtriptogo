<%= render 'shared/sidebar' %>

<div class="container">
  <div class="container-btn d-flex justify-content-center">
    <%= link_to "Créer un projet", new_project_path, class: "btn btn-home" %>
  </div>

<div class="container">
    <div class="container d-flex justify-content-center">
      <div class="cards-projects">
        <% @projects.each do |project| %>
          <div class="card-projects">
            <%= link_to project_path(project) do %>
              <div class="card-projects-img">
                <% if project.photo.attached? %>
                <img src='<%= cl_image_path project.photo.key%>' alt="">
                <% else %>
                  <div class="project-card-right" style="background-image: url(https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80)">
                <% end %>
                <div class="info-projects d-flex flex-column align-item-center">
                    <ul>
                      <div class="resume">
                        <li>
                          <h5 class="mt-3">Description</h5>
                          <p><%= project.description %></p>
                        </li>
                        <div class="d-flex justify-content-between">
                        <li>
                          <div class="picto">
                            <h6 class="mt-3">Saison</h6>
                            <% if project.season == "été" %>
                              <i class="fas fa-sun"></i>
                            <% end %>
                            <% if project.season == "automne" %>
                              <i class="fab fa-canadian-maple-leaf"></i>
                            <% end %>
                            <% if project.season == "printemps" %>
                              <i class="fas fa-sun"></i>
                            <% end %>
                            <% if project.season == "hiver" %>
                              <i class="fas fa-snowflake"></i>
                            <% end %>
                          </div>
                        </li>
                        <li>
                          <div class="picto">
                          <h6 class="mt-3">Transport</h6>
                            <% if project.transport == "voiture" %>
                              <i class="fas fa-car"></i>
                            <% end %>
                            <% if project.transport == "avion" %>
                              <i class="fas fa-plane"></i>
                            <% end %>
                            <% if project.transport == "train" %>
                              <i class="fas fa-train"></i>
                            <% end %>
                          </div>
                        </li>
                        <li>
                          <div class="picto">
                          <h6 class="mt-3">Thème</h6>
                              <% if project.theme == "culture" %>
                                <i class="fas fa-university"></i>
                              <% end %>
                              <% if project.theme == "gastronomie" %>
                                <i class="fas fa-utensils"></i>
                              <% end %>
                              <% if project.theme == "nature" %>
                                <i class="fas fa-mountain"></i>
                              <% end %>
                          </div>
                          </li>
                          <li>
                            <div class="picto">
                              <h5 class="mt-3">Budget</h5>
                              <%= project.profil %>
                            </div>
                          </li>
                        </div>
                      </div>
                    </ul>
                </div>
              </div>
            <% end %>
            <div class="card-projects-profile">
              <% if project.travelers.first.user.photo.attached? %>
                <%= cl_image_tag project.travelers.first.user.photo.key , crop: :fill %>
              <% else %>
                <img src='https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80'>
              <% end %>
              <div class="card-projects-text">
                <h2><%= project.name %></h2>
                <p>by <b><%= project.travelers.first.user.first_name %> <%= project.travelers.first.user.last_name %></b></p>
              </div>
            </div>
          </div>
        <%end %>
      </div>
    </div>
</div>
